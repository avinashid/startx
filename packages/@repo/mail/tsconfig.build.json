{
	"extends": ["./tsconfig.json", "typescript-config/tsconfig.build.json"],
	"compilerOptions": {
		"composite": true,
		"rootDir": ".",
		"outDir": "dist",
		"jsx": "react-jsx",
		"tsBuildInfoFile": "dist/build.tsbuildinfo",
		"declaration": true,
		"preserveSymlinks": false
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/__tests__/**"]
}
