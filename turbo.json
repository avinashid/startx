{
	"$schema": "https://turborepo.dev/schema.json",
	"ui": "tui",
	"tasks": {
		"build:config": {
			"cache": true,
			"dependsOn": ["lint", "^build"],
			"inputs": [
				"src/**",
				"tsconfig*.json",
				"package.json",
				"vitest.config.ts",
				"tsdown.config.ts"
			],
			"outputs": ["dist/**"]
		},
		"lint": {
			"cache": true,
			"inputs": ["src/**", "eslint.config.*", ".eslintrc.*", "tsdown.config.ts", "package.json"]
		},

		"build": {
			"cache": true,
			"inputs": ["src/**", "tsconfig*.json", "package.json"],
			"outputs": ["dist/**"],
			"dependsOn": ["lint", "^build"]
		},

		"typecheck": {
			"cache": true,
			"dependsOn": ["^typecheck", "build"],
			"inputs": ["src/**", "tsconfig*.json"]
		},

		"test": {
			"cache": true,
			"inputs": ["src/**", "test/**", "vitest.config.*", "package.json"],
			"outputs": ["coverage/**", "*.xml"]
		},
		"test:dev": {
			"cache": false,
			"inputs": ["src/**", "test/**", "vitest.config.*", "package.json"],
			"outputs": ["coverage/**", "*.xml"],
			"interactive": true
		},

		"check-types": {
			"cache": true,
			"dependsOn": ["^check-types"]
		},

		"watch": {
			"cache": false,
			"persistent": true
		},

		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false
		},
		"format": {
			"cache": false
		},
		"format:check": {
			"cache": false
		},
		"clean": {
			"cache": false
		},
		"deep:clean": {
			"cache": false
		}
	}
}
